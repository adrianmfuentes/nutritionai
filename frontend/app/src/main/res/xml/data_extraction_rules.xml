<?xml version="1.0" encoding="utf-8"?><!--
   Sample data extraction rules file; uncomment and customize as necessary.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include user preferences and app data -->
        <include domain="sharedpref" path="nutrition_ai_prefs.xml"/>
        <include domain="database" path="nutrition_ai_db"/>

        <!-- Exclude sensitive data like auth tokens -->
        <exclude domain="sharedpref" path="nutrition_ai_prefs.xml">
            <value key="auth_token"/>
        </exclude>
    </cloud-backup>
    <device-transfer>
        <!-- Same rules for device transfer -->
        <include domain="sharedpref" path="nutrition_ai_prefs.xml"/>
        <include domain="database" path="nutrition_ai_db"/>

        <exclude domain="sharedpref" path="nutrition_ai_prefs.xml">
            <value key="auth_token"/>
        </exclude>
    </device-transfer>
</data-extraction-rules>